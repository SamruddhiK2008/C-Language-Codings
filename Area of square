//Code for area and perimeter of square//
#include<stdio.h>
int main()
{
  float area,peri,a;
  printf("Enter the value of side:",a);
  scanf("%f",&a);
  area=a*a; //formula for area of square
  printf("\nArea of square=%f sqcm",area);
  peri=4*a; //formula for perimeter of square//
  printf("\nPerimeter of square=%f cm", peri);
}

output:
